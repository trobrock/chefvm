#!/usr/bin/env bash
set -e

print=""
if [ "$1" = "-" ]; then
  print=1
  shift
fi

shell="$1"
if [ -z "$shell" ]; then
  shell="$(basename "$SHELL")"
fi

resolve_link() {
  $(type -p greadlink readlink | head -1) $1
}

abs_dirname() {
  local cwd="$(pwd)"
  local path="$1"

  while [ -n "$path" ]; do
    cd "${path%/*}"
    local name="${path##*/}"
    path="$(resolve_link "$name" || true)"
  done

  pwd
  cd "$cwd"
}

root="$(abs_dirname "$0")/.."

if [ -z "$print" ]; then
  case "$shell" in
  bash )
    profile='~/.bash_profile'
    ;;
  zsh )
    profile='~/.zshenv'
    ;;
  * )
    profile='your profile'
    ;;
  esac

  { echo "# Load chefvm automatically by adding"
    echo "# the following to ${profile}:"
    echo
    echo "eval \"\$(${_CHEFVM_ROOT}/bin/chefvm init -)\""
    echo
  } >&2

  exit 1
fi

echo "export PATH=\"\${PATH}:${_CHEFVM_ROOT}/bin\""

case "$shell" in
bash | zsh )
  echo "source \"$root/completions/chefvm.${shell}\""
  ;;
esac

commands=(`chefvm commands --sh`)
IFS="|"
cat <<EOS
chefvm() {
  local command="\$1"
  if [ "\$#" -gt 0 ]; then
    shift
  fi

  case "\$command" in
  ${commands[*]})
    eval \`chefvm "sh-\$command" "\$@"\`;;
  *)
    command chefvm "\$command" "\$@";;
  esac
}
chefvm setup
EOS
